{% extends 'base.html.twig' %}

{% block title %}Dodaj użytkownika{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Dodaj użytkownika</h1>
        <div class="row">
            <div class="col-md-4">
                <h2>Nowy użytkownik:</h2>
                {% if form is defined %}
                {{ form(form) }}
                {% endif %}
            </div>
            <div class="col-md-8">
                <h4>Użytkownicy przypisani do magazynu:</h4>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">Login</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.user.login }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

